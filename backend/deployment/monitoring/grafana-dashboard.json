{
  "dashboard": {
    "id": null,
    "title": "HeatGuard Predictive Safety System - Overview",
    "tags": ["heatguard", "api", "safety", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"heatguard-api\"}",
            "legendFormat": "API Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "unit": "none"
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"heatguard-api\"}[5m])) * 60",
            "legendFormat": "Requests/min",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 500
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"heatguard-api\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"heatguard-api\"}[5m])) * 100",
            "legendFormat": "Error %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Response Time (95th percentile)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"heatguard-api\"}[5m])) by (le)) * 1000",
            "legendFormat": "P95 Response Time",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 200
                },
                {
                  "color": "red",
                  "value": 1000
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "API Request Rate Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"heatguard-api\"}[5m])) by (method, endpoint) * 60",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per minute",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        },
        "tooltip": {
          "shared": true,
          "sort": 2
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 6,
        "title": "Response Time Percentiles",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"heatguard-api\"}[5m])) by (le)) * 1000",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"heatguard-api\"}[5m])) by (le)) * 1000",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"heatguard-api\"}[5m])) by (le)) * 1000",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Response time (ms)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        }
      },
      {
        "id": 7,
        "title": "Heat Exposure Predictions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(heatguard_predictions_total[1h]))",
            "legendFormat": "Predictions/hour",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 8,
        "title": "Risk Level Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(increase(heatguard_predictions_total{risk_level=\"Safe\"}[1h]))",
            "legendFormat": "Safe",
            "refId": "A"
          },
          {
            "expr": "sum(increase(heatguard_predictions_total{risk_level=\"Caution\"}[1h]))",
            "legendFormat": "Caution",
            "refId": "B"
          },
          {
            "expr": "sum(increase(heatguard_predictions_total{risk_level=\"Warning\"}[1h]))",
            "legendFormat": "Warning",
            "refId": "C"
          },
          {
            "expr": "sum(increase(heatguard_predictions_total{risk_level=\"Danger\"}[1h]))",
            "legendFormat": "Danger",
            "refId": "D"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "visible",
            "placement": "right"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 12
        }
      },
      {
        "id": 9,
        "title": "High-Risk Predictions Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(heatguard_predictions_total{risk_level=\"Danger\"}[5m])) * 60",
            "legendFormat": "Danger Predictions/min",
            "refId": "A"
          },
          {
            "expr": "sum(rate(heatguard_predictions_total{risk_level=\"Warning\"}[5m])) * 60",
            "legendFormat": "Warning Predictions/min",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Predictions per minute",
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Risk Predictions Alert",
          "noDataState": "no_data",
          "notifications": []
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 12
        }
      },
      {
        "id": 10,
        "title": "System Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"heatguard\"}[5m])) by (pod) * 100",
            "legendFormat": "CPU % - {{pod}}",
            "refId": "A"
          },
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=\"heatguard\"}) by (pod) / 1024 / 1024 / 1024",
            "legendFormat": "Memory GB - {{pod}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "CPU % / Memory GB"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 11,
        "title": "Redis Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Connected Clients",
            "refId": "A"
          },
          {
            "expr": "rate(redis_total_commands_processed_total[5m])",
            "legendFormat": "Commands/sec",
            "refId": "B"
          },
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Memory Used MB",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Count / MB"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      },
      {
        "id": 12,
        "title": "Model Performance Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "heatguard_model_accuracy",
            "legendFormat": "Model Accuracy",
            "refId": "A"
          },
          {
            "expr": "avg_over_time(heatguard_data_quality_score[5m])",
            "legendFormat": "Data Quality Score",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(heatguard_prediction_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "Prediction Time P95 (ms)",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Score / Time (ms)",
            "max": 1,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 13,
        "title": "API Endpoint Performance",
        "type": "table",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"heatguard-api\"}[5m])) by (method, endpoint) * 60",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A",
            "format": "table"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"heatguard-api\"}[5m])) by (method, endpoint, le)) * 1000",
            "legendFormat": "",
            "refId": "B",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {},
              "renameByName": {
                "Value #A": "Requests/min",
                "Value #B": "P95 Response Time (ms)",
                "method": "Method",
                "endpoint": "Endpoint"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 36
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_pod_info, namespace)",
          "current": {
            "value": "heatguard",
            "text": "heatguard"
          },
          "options": [],
          "refresh": 1,
          "includeAll": false,
          "multi": false
        },
        {
          "name": "pod",
          "type": "query",
          "query": "label_values(kube_pod_info{namespace=\"$namespace\"}, pod)",
          "current": {
            "value": "All",
            "text": "All"
          },
          "options": [],
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\"HeatGuard.*\",alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "HeatGuard Alerts",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{description}}"
        }
      ]
    },
    "links": [
      {
        "icon": "external link",
        "tags": [],
        "title": "HeatGuard API Documentation",
        "tooltip": "",
        "type": "link",
        "url": "https://api.heatguard.com/docs"
      },
      {
        "icon": "external link",
        "tags": [],
        "title": "Runbooks",
        "tooltip": "",
        "type": "link",
        "url": "https://docs.heatguard.com/runbooks"
      }
    ]
  }
}